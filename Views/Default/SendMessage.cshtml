@model EntityLayer.Concrete.Contact

<div class="col-md-9 contact-middle">
	<h2>Bize Merhaba De!</h2>
		@using (Html.BeginForm("SendMessage","Default",FormMethod.Post)) //method-Controller-action sırasıyla kullanılır. 
		{
		<div class="form-agileinfo">
			<p>Ad Soyad</p>
			<input type="text" asp-for="Name" placeholder="Adınız Soyadınız" required="" />
			<p>Mail Adresi</p>
			<input type="email" asp-for="Mail" placeholder="Mail Adresiniz" required="" />
		</div>
		<div class="form-agileits-w3layouts">
			<p>Yorum Yap</p>
			<textarea asp-for="Message" placeholder="Mesajınız(Zorunlu)..." required=""></textarea>
			<input type="submit" value="GÖNDER">
		</div>
		<div class="clearfix"></div>
		}
</div>