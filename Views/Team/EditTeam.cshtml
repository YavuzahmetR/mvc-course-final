@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "EditTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Bilgi Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.TeamID)
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Adınız Soyadınız :" asp-for="PersonName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Görev Ekleyiniz :" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Görsel Yolu Ekleyiniz :" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Facebook</label>
                    <input type="text" class="form-control" placeholder="Link Ekleyiniz :" asp-for="FacebookUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Instagram</label>
                    <input type="text" class="form-control" placeholder="Link Ekleyiniz :" asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Twitter</label>
                    <input type="text" class="form-control" placeholder="Link Ekleyiniz :" asp-for="TwitterUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Website</label>
                    <input type="text" class="form-control" placeholder="Link Ekleyiniz :" asp-for="WebsiteUrl">
                </div>
                <button type="submit" class="btn btn-outline-success">Güncelle</button>
            </form>
        </div>
    </div>
</div>



