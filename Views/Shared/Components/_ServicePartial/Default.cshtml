@using EntityLayer.Concrete
@model List<Service>

<div class="sevices-w3layouts" id="services">
	<div class="container">
		<h3 class="tittle">HİZMETLERİMİZ</h3>
		<p class="heading-btm-w3ls">Bireysel ve Kurumsal müşteri saygınlığı için var olan tüm imkanlarımız.</p>
		<div class="services-main">
			@foreach(var item in Model)
			{
				<div class="@item.animaClass1">
					<h5>@item.Title</h5>
					<p>@item.Description</p>

					<div class="@item.animaClass2">
						<i class="@item.Image" aria-hidden="true"></i>
						<p>@item.Title</p>
						
						<p>Hizmeti Gör</p>
					</div>
				</div>
			}
			
		</div>
		<div class="clearfix"> </div>
	</div>
</div>