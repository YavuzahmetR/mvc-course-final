@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Silme</th>
                            <th>Düzenleme</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Announcement/EditAnnouncement/@item.AnnouncementID" class="btn btn-outline-success">Düzenle</a></td>
                                @if(item.Status == true)
                                {
                                    <td><a href="/Announcement/ChangeStatusFalse/@item.AnnouncementID" class="btn btn-outline-warning">Pasif Yap</a></td>
                                }
                                else
                                {
                                    <td><a href="/Announcement/ChangeStatusTrue/@item.AnnouncementID" class="btn btn-outline-primary">Aktif Yap</a></td>
                                }                              
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Announcement/AddAnnouncement" class="btn btn-outline-secondary">Yeni Duyuru Ekle</a>
            </div>
        </div>
    </div>
</div>