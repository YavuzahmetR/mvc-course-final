@model EntityLayer.Concrete.Address
@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="AddressID" />
                <div class="form-group">
                    <label for="exampleInputName1">Mahalle/Sokak</label>
                    <span asp-validation-for="Description1" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Mahalle Sokak Giriniz : " asp-for="Description1">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">İlçe</label>
                    <span asp-validation-for="Description2" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="İlçe Giriniz : " asp-for="Description2">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Şehir</label>
                    <span asp-validation-for="Description3" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Şehir Giriniz : " asp-for="Description3">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Numara</label>
                    <span asp-validation-for="Description4" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Numara Giriniz : " asp-for="Description4">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Harita Bilgisi</label>
                    <span asp-validation-for="MapInfo" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Harita Bilgisi Giriniz : " asp-for="MapInfo">
                </div>
                <button type="submit" class="btn btn-success">Güncelle</button>
            </form>
        </div>
    </div>
</div>

